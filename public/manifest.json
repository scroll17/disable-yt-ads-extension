{
  "name": "Disable YouTube Ads",
  "version": "1.0.0",
  "author": "Denis Zolotarenko",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Disable YT Ads",
      "default_icon": "icon.png"
  },
  "icons": {
      "256": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src * data: 'unsafe-inline' 'unsafe-eval';"
  },
  "host_permissions": ["*://*/*"],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "background",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/"],
      "js": ["execute-script.js", "disable-ads-script.js", "base.mjs"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "styles/*",
      "images/*",
      "disable-ads-script.js"
    ],
    "matches": ["<all_urls>"],
    "extension_ids": []
  }]
}